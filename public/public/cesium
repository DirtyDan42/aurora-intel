const CopyWebpackPlugin = require("copy-webpack-plugin")
const path = require("path")

module.exports = {
  webpack: (config) => {
    config.plugins.push(
      new CopyWebpackPlugin({
        patterns: [
          {
            from: path.join(
              __dirname,
              "node_modules/cesium/Build/Cesium"
            ),
            to: "public/cesium"
          }
        ]
      })
    )
    return config
  }
}
